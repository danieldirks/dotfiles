#!/bin/bash
{{ if eq .osid "linux-ubuntu" -}}
echo -e "\033[33mUpdating system...\033[0m"
sudo apt-get update
sudo apt-get upgrade
echo -e "\033[33mCleaning up system...\033[0m"
sudo apt-get autoremove
{{- else if eq .osid "darwin" -}}
echo -e "\033[33mUpdating system...\033[0m"
brew update
brew upgrade
{{- end }}

echo -e "\033[33mUpdating dotfiles...\033[0m"
chezmoi update
chezmoi git status
