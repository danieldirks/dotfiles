#!/bin/bash
HI='\033[33m'
CL='\033[0m'
{{ if eq .osid "linux-ubuntu" -}}
echo -e "${HI}sudo apt-get update${CL}"
sudo apt-get update
echo -e "${HI}sudo apt-get upgrade${CL}"
sudo apt-get upgrade
echo -e "${HI}sudo apt-get autoremove${CL}"
sudo apt-get autoremove
{{- else if eq .osid "darwin" -}}
echo -e "${HI}brew update${CL}"
brew update
echo -e "${HI}brew upgrade${CL}"
brew upgrade
{{- end }}

echo -e "${HI}chezmoi update${CL}"
chezmoi update
echo -e "${HI}chezmoi git status${CL}"
chezmoi git status
