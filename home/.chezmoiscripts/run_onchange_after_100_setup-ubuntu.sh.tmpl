{{- if eq .osid "linux-ubuntu" -}}
#!/usr/bin/env bash

HIGHLIGHT='\033[0;33m'
RESET='\033[0m'

# packages
echo -e "${HIGHLIGHT}Installing packages...${RESET}"
sudo apt install -y zsh neovim tmux tmuxinator neofetch git curl

# zsh
echo -e "${HIGHLIGHT}Setting up zsh...${RESET}"
sudo chsh -s $(which zsh) ${USER}

# tmux plugin manager
echo -e "${HIGHLIGHT}Installing tpm...${RESET}"
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm || true

{{- end -}}
