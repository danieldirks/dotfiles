{{- if (and (eq .osid "darwin") (eq .systemSetup true)) -}}
#!/usr/bin/env zsh

HIGHLIGHT='\e[0;33m'
RESET='\e[0m'

# homebrew
echo -e "${HIGHLIGHT}Installing homebrew...${RESET}"
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# packages
echo -e "${HIGHLIGHT}Installing packages...${RESET}"
brew bundle --no-lock --file=/dev/stdin <<EOF
brew "zsh"
brew "neovim"
brew "tmux"
brew "tmuxinator"
brew "neofetch"
brew "git"
brew "curl"
cask "vscode"
cask "google-chrome"
EOF

{{- end -}}
