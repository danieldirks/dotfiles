% https://www.beamer.plus/Colors.html

% text
\setbeamercolor{normal text}{fg=text, bg=mantle}
\setbeamercolor{alerted text}{fg=red}
\setbeamercolor{example text}{fg=red}
\setbeamercolor{structure}{fg=red}

% background
\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

% frame
\setbeamercolor{title}{fg=text, bg=mantle}
\setbeamercolor{frametitle}{parent={title}, fg=text}
\setbeamercolor{block title}{parent={frametitle}}
\setbeamercolor{block body}{parent={normal text}}

% lists
\setbeamercolor{itemize item}{fg=overlay1}
\setbeamercolor{itemize subitem}{parent={itemize item}}
\setbeamercolor{itemize subsubitem}{parent={itemize item}}
\setbeamercolor{enumerate item}{parent={itemize item}}
\setbeamercolor{enumerate subitem}{parent={enumerate item}}
\setbeamercolor{enumerate subsubitem}{parent={enumerate item}}
\setbeamercolor{description item}{parent={itemize item}}
\setbeamercolor{description subitem}{parent={description item}}
\setbeamercolor{description subsubitem}{parent={description item}}

